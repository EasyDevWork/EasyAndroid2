<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_000000">

        <FrameLayout
            android:id="@+id/flContain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.easy.qrcode.ui.qr_code.CameraScannerMaskView
                android:id="@+id/scannerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:clvBoxAngleBorderWidth="4dp"
                app:clvBoxAngleColor="@color/color_ffffff"
                app:clvBoxAngleLength="24dp"
                app:clvBoxAngleRadius="5dp"
                app:clvBoxBorderColor="@color/color_33ffffff"
                app:clvBoxBorderWidth="2dp"
                app:clvCameraLensGravity="center"
                app:clvCameraLensWidthWeight="{3,5}"
                app:clvMaskColor="@color/color_33000000"
                app:clvText="@string/qrcode_scan"
                app:clvTextColor="@color/color_ffffff"
                app:clvTextSize="12sp"
                app:clvTextVerticalMargin="25dp"
                app:sbvSrc="@drawable/icon_img_qrcode_scan_light" />
        </FrameLayout>
        <!--        <com.dlazaro66.qrcodereaderview.QRCodeReaderView-->
        <!--            android:id="@+id/qrView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent" />-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/icon_back_transparent" />

            <TextView
                android:id="@+id/ivMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/open_album"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>
</layout>