<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.easy.loadimage.view.LoadingImageView
                    android:id="@+id/loadingImageView"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有加载动画" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="200dp"
                        android:layout_height="100dp" />

                    <com.easy.loadimage.progress.ImageLoadCircleProgressView
                        android:id="@+id/progressView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:progress="0"
                        app:cpv_progressNormalColor="@color/transparent10"
                        app:cpv_progressReachColor="@color/transparent90_white"
                        app:cpv_progressStyle="FillInnerArc"
                        app:cpv_progressTextColor="#d01716"
                        app:cpv_progressTextSize="13sp"
                        app:cpv_progressTextVisible="false" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击下载图片" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义圆角位置" />

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高斯模糊" />

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="圆形图" />

                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距行圆角" />

                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黑白图" />

                <com.easy.loadimage.view.SelectImageView
                    android:id="@+id/iv_7"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选中透明度变化" />

                <ImageView
                    android:id="@+id/iv_8"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载进度监听" />

                <ImageView
                    android:id="@+id/iv_9"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="圆形带边框" />

                <ImageView
                    android:id="@+id/iv_10"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组合效果" />

                <ImageView
                    android:id="@+id/iv_11"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载本地图片" />

                <ImageView
                    android:id="@+id/iv_12"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载失败" />

                <ImageView
                    android:id="@+id/iv_13"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距行有边框" />

                <ImageView
                    android:id="@+id/iv_14"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定颜色滤镜" />

                <ImageView
                    android:id="@+id/iv_15"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡通效果" />

                <ImageView
                    android:id="@+id/iv_16"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裁剪距行" />

                <ImageView
                    android:id="@+id/iv_17"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定位置裁剪" />

                <ImageView
                    android:id="@+id/iv_18"
                    android:layout_width="200dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="覆盖" />

                <ImageView
                    android:id="@+id/iv_19"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高亮" />


                <ImageView
                    android:id="@+id/iv_20"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lomo风格" />

                <ImageView
                    android:id="@+id/iv_21"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="差异对比" />


                <ImageView
                    android:id="@+id/iv_22"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反色差" />

                <ImageView
                    android:id="@+id/iv_23"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuwahara" />

                <ImageView
                    android:id="@+id/iv_24"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="像素" />

                <ImageView
                    android:id="@+id/iv_25"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深褐色" />

                <ImageView
                    android:id="@+id/iv_26"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="素描" />

                <ImageView
                    android:id="@+id/iv_27"
                    android:layout_width="200dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="螺旋形" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
